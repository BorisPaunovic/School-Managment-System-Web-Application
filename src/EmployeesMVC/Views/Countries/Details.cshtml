@using School.DataModels.Models

@model CountriesBL<Countries>



<div >
    <div class="card-header">@Model.Data.CountryName</div>
    <div class="card-body">
        
        <div style="float:left ; margin:3vh">
            <img style="width:10vh"  src="~/Pictures/CountriesIcon.png"  />
        </div>

        <div>
            <label>Name: </label>
            <label>@Model.Data.CountryName</label>
        </div>
        <div >
            <label>Phone code: </label> 
            <label>@Model.Data.PhoneCode</label>
        </div>
       
        <div>
            <label>ISO: </label>
            <label>@Model.Data.ISO</label>
        </div>

        <div>
            <label>ISO3: </label>
            <label>@Model.Data.ISO3</label>
        </div>


       
    </div>
    <div class="card-footer">
        <i class="fas fa-edit">  <a asp-action="Edit" asp-controller="Countries" asp-route-Id="@Model.Data.CountriesID">Edit </a></i>
        <i class="fas fa-trash">  <a asp-action="Delete" asp-controller="Countries" asp-route-Id="@Model.Data.CountriesID">Delete </a></i>
      
    </div>

   
   

</div>