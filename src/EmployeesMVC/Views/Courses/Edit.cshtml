@using School.DataModels.Models

@model CoursesBL<Courses>



<div class="card">
    <div class="card-header ; text-center">Update course</div>

    <form method="post" asp-controller="Courses" asp-action="EditCourse">
        <div class="card-body">


            <div class="form-group">
              
                <input type="hidden" class="form-control" asp-for="@Model.Data.CoursesID">
            </div>
            <div class="form-group">
                <label>Course Name</label>
                <input type="text" class="form-control" asp-for="@Model.Data.CoursesName">
            </div>
            <div class="form-group">
                <label>Course Description</label>
                <input type="text" asp-for="@Model.Data.CoursesDescription" class="form-control">
            </div>
           


        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary ">Update course</button>
        </div>
    </form>
</div>

