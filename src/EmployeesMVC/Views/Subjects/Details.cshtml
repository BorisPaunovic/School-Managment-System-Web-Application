@using School.DataModels.Models

@model SubjectsBL<Subjects>



<div >
    <div class="card-header">@Model.Data.SubjectName</div>
    <div class="card-body">
        
        <div style="float:left ; margin:3vh">
            <img style="width:10vh"  src="~/Pictures/CountriesIcon.png"  />
        </div>

        <div>
            <label>Subject Id: </label>
            <label>@Model.Data.SubjectId</label>
        </div>
        <div >
            <label>Subject Name: </label> 
            <label>@Model.Data.SubjectName</label>
        </div>
       
        <div>
            <label>Subject Description: </label>
            <label>@Model.Data.SubjectDescription</label>
        </div>

     

       
    </div>
    <div class="card-footer">
        <i class="fas fa-edit">  <a asp-action="Edit" asp-controller="Subjects" asp-route-Id="@Model.Data.SubjectId">Edit </a></i>
        <i class="fas fa-trash">  <a asp-action="Delete" asp-controller="Subjects" asp-route-Id="@Model.Data.SubjectId">Delete </a></i>
      
    </div>

   
   

</div>